// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Ansible TPI",
  "build": {
    "context": "..",
    "dockerfile": "docker/Dockerfile"
  },
  "runArgs": [
    // Set container name
    "--name=ansible-tpi",

    // Condfigure Host network
    "--network=host",

    // Disable SELinux
    "--security-opt=label=disable"

    // Disables Seccomp (System Call Filtering)
    // removes restrictions on system calls the container can use
    // "--security-opt=seccomp=unconfined"
  ],
  "initializeCommand": "mkdir -p ${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/tpi",
  "onCreateCommand": "chmod +x .devcontainer/scripts/onCreateCommand.sh && .devcontainer/scripts/onCreateCommand.sh",
  "postCreateCommand": "chmod +x .devcontainer/scripts/postCreateCommand.sh && .devcontainer/scripts/postCreateCommand.sh",
  "postStartCommand": "chmod +x .devcontainer/scripts/postStartCommand.sh && .devcontainer/scripts/postStartCommand.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/work,type=bind",
  "workspaceFolder": "/work",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,ro",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/config,target=/home/vscode/.ssh/config,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/tpi/,target=/home/vscode/.ssh/tpi/,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "redhat.vscode-yaml",
        "dhoeric.ansible-vault",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "DavidAnson.vscode-markdownlint",
        "PKief.material-icon-theme",
        "mrkaran.nomfmt",
        "esbenp.prettier-vscode",
        "jlcs-es.x509-parser"
      ]
    }
  }

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "pip3 install --user -r requirements.txt",

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
